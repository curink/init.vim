{
  "coc.preferences.hoverTarget": "echo",
  "coc.preferences.codeLens.enable": true,
  "coc.preferences.diagnostic.virtualText": true,
  "languageserver": {
    "go": {
      "command": "bingo",
      "filetypes": ["go"],
      "initializationOptions": {
        "enhanceSignatureHelp": true,
        "useGlobalCache": true
      }
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    }
  }
}
