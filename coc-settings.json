{
  /* "coc.preferences.hoverTarget": "echo", */
  "coc.preferences.enableFloatHighlight": false,
  "codeLens.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "signature.target": "echo",
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "languageserver": {
    "efm": {
      /* go get github.com/mattn/efm-langserver/cmd/efm-langserver */
      /* yarn global add markdownlint-cli */
      "command": "efm-langserver",
      "filetypes": ["markdown"]
    },
    "go": {
      "command": "bingo",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".git/"],
      "initializationOptions": {
        "diagnosticsStyle": "instant",
        "enhanceSignatureHelp": true
      }
    },
    "gopls": {
      "command": "gopls",
      "filetypes": ["gox"],
      "rootPatterns": ["go.mod", ".git/"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": ["compile_commands.json", ".ccls", ".root", ".git/"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/ccls"
      }
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    }
  }
}
